<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Command="{Binding SetPlus}" Content="SetPlus" Height="30" Width="50"></Button>
            <Button Command="{Binding SetMinus}" Content="SetMinus" Height="30" Width="50"></Button>
            <Button Command="{Binding AddToDo}" Content="AddToDo" Height="30" Width="70"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBox Text = "{Binding SetState}" Height="20" Width="80" ></TextBox>
            <ListBox ItemsSource = "{Binding ToDo}" Width="200" ></ListBox>

        </StackPanel>
    </StackPanel>
</Window>
