<Window x:Class="EasyWay.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Command="{Binding SetCount}" Content="ButtOn" Height="30" Width="50"></Button>
            <Button Command="{Binding SetMinus}" Content="ButtOff" Height="30" Width="50"></Button>

        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Hello World"></TextBlock>
            <TextBlock Text="{Binding Count}"></TextBlock>
            <TextBox Text = "{Binding State}" ></TextBox>
        </StackPanel>
    </StackPanel>
    
</Window>